{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": "./src/",
		"paths": {
			"@/common/*": ["common/*"],
			"@/components/*": ["components/*"],
			"@/providers/*": ["providers/*"],
			"@/routes/*": ["routes/*"],
			"@/assets/*": ["assets/*"],
			"@/services/*": ["services/*"],
			"@/api/*": ["api/*"],
			"@/types/*": ["types/*"],
			"@/store/*": ["store/*"],
			"@/configs/*": ["configs/*"]
		}
	},
	"include": ["src", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"],

	"references": [{ "path": "./tsconfig.node.json" }]
}
